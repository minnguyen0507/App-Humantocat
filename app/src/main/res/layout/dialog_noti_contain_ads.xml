<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#787878">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/widget_size_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_native_ad"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_20"
                android:layout_marginEnd="@dimen/widget_size_20"
                android:text="@string/n_5"
                android:textSize="@dimen/font_size_16" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_20"
                android:layout_marginEnd="@dimen/widget_size_20"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:backgroundTint="#84D539"
                android:text="@string/play"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
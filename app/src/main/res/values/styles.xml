<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="tab_style_active">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_tab_active</item>
    </style>

    <style name="tab_style_inactive">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_tab_inactive</item>
    </style>

    <style name="text_normal_black">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_small_black">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">#4D4B4B</item>
    </style>

    <style name="text_medium_bold_black">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_medium_bold_white">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_normal_white">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_larger_bold_black">
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>